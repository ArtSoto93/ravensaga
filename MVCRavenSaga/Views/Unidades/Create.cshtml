<script type="text/javascript">
    $(document).ready(function () {
        $("#thing").hide();
        $("#hide").click(function hide() {
            $("#thing").hide(1000);
            $("#hide").hide(1000);
            $("#show").show(1000);
            $("#Promovido").attr('checked', false);
        });
        $("#show").click(function show() {
            $("#Promovido").attr('checked', true);
            $("#thing").show(1000);
            $("#hide").show(1000);
            $("#show").hide(1000);
        });
    });
</script>

<script>
    $(document).ready(function () {
        $.datetimepicker.setLocale('es');
        $("#FechaNacimiento").
